{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {"@angular/": [
      "node_modules/@angular/"
    ]},
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020", 
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020", 
      "dom"
    ],
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "resolveJsonModule": true 
  }
}